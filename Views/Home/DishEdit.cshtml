@{
    ViewData["Title"] = "Edit Dish";
}
@model Dish

<div class="text-left">
    <div class="jumbotron pb-4 pt-4 mb-3">
        <div class="card bg-dark text-white">
            <img id="photo" src="@Model.DataImageUrlField" alt="...">
            <div class="card-img-overlay">
                <h1 class="display-4">ChefsNDishes</h1>
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="text-center">
        <div class="card-header text-white bg-dark">
            <h3>Edit @Model.Name</h3>
        </div>
    </div>
    <div class="card-body bg-info">
        <form action="/dish/@Model.DishId/update" method="post">
            <div class="row">
                <div class="col-4">
                    <div class="form-group mb-0">
                        <label asp-for="Creator">Chef's Name</label>
                        <select type="text" asp-for="ChefId" class="form-control">
                            <option value=""></option>
                            @foreach (var c in ViewBag.AllChefs)
                            {
                                <option value="@c.ChefId">@c.FirstName @c.LastName</option>
                            }
                        </select>
                    </div>
                    <div class="col-10 text-danger">
                        <span asp-validation-for="Creator"></span>
                    </div>
                    <div class="form-group mt-3 mb-0">
                        <label asp-for="Name">Name of Dish</label>
                        <input type="text" asp-for="Name" class="form-control">
                    </div>
                    <div class="col-10 text-danger">
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group mt-3 mb-0">
                        <label asp-for="Calories"># of Calories</label>
                        <input type="number" asp-for="Calories" class="form-control">
                    </div>
                    <div class="col-10 text-danger">
                        <span asp-validation-for="Calories"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="text-center">
                        <div class="form-group mx-sm-3 mb-0">
                            <label asp-for="Tastiness">Tastiness Rating</label>
                            <input type="number" asp-for="Tastiness" class="form-control">
                        </div>
                        <div class="col-10 text-danger">
                            <span asp-validation-for="Tastiness"></span>
                        </div>
                        <button type="submit" class="btn btn-outline-dark border-dark mt-5">Update</button>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group mb-0">
                        <label asp-for="Description">Description</label>
                        <textarea class="form-control" asp-for="Description" rows="5" cols="10"></textarea>
                    </div>
                    <div class="col-10 text-danger">
                        <span asp-validation-for="Description"></span>
                    </div>
                    <div class="form-group mt-3 mb-0">
                        <label asp-for="DataImageUrlField">Image URL</label>
                        <input type="text" asp-for="DataImageUrlField" class="form-control">
                    </div>
                    <div class="col-10 text-danger">
                        <span asp-validation-for="DataImageUrlField"></span>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>